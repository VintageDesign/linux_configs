# snippets for personal website

snippet "(code|pre)" "code block" r
<pre class="language-${1:python} pl-3"><code>${2:${VISUAL}}</code></pre>
endsnippet

snippet "fig?u?r?e?" "figure" r
<figure class="figure d-block mx-auto w-${1:100}">
    <img class="figure-img img-fluid rounded w-100" src="${2:url}" alt="$3">
    <figcaption class="figure-caption text-right">${3:caption}</figcaption>
</figure>
endsnippet

snippet "(blockq?u?o?t?e?|quote)" "a bootstrap <blockquote>" r
<blockquote${1: class="blockquote border-left border-2 pl-2"}>
    ${2:<p class="mb-0">${3}</p>}
    ${4:<footer class="blockquote-footer">${5}</footer>}
</blockquote>
endsnippet

snippet ings "A list of ingredients" b
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Ingredient</th>
            <th scope="col">Quantity</th>
            <th scope="col">Notes</th>
        </tr>
    </thead>
